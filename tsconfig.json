{
  "extends": "@repo/typescript-config/base.json",
  "include": [
    "./src", "./src/*.ts", "./src/*.tsx"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["es6", "DOM", "DOM.Iterable"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
		"@/*": ["src/*"],
		"~/*": ["public/*"]
	}
  },
}
